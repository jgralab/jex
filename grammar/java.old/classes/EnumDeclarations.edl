 %%%
module java/classes/EnumDeclarations
imports
  java/lexical/Identifiers
  java/classes/ClassDeclarations

exports
  sorts
    EnumDec
    EnumDecHead
    EnumBody
    EnumConst
    EnumConstArgs
    EnumBodyDecs

  context-free syntax
    @Symboltable{name2Member}
    rule
	  #$ = Enum();
	   name2Member.namespace = $;
	  #
	  EnumDecHead
	  #$.name = $0;
	   $packagePrefix = {return packagePrefix;};
	   {packagePrefix += (packagePrefix.isEmpty()? "" : ".") + #$.name#;}
	   $.qualifiedName = {return packagePrefix;};
	   name2NamedElement.declare($.qualifiedName, $);
	  #
	  EnumBody -> EnumDec
	  #{packagePrefix = #$packagePrefix#.toString();}#

    rule (Anno | ClassMod)* "enum" Id Interfaces? -> EnumDecHead #$=lexem($2);#

    rule
	  "{"
	  {
	    EnumConst
	    #$mem = EnumConst();
	     $mem.name = $0;
	     name2Member.declare($mem.name, $mem);
	    #
	    ","
	   }*
	   EnumBodyDecs? "}" -> EnumBody
    rule
	  "{"
	  {
	    EnumConst
	    #$mem = EnumConst();
	     $mem.name = $0;
	     name2Member.declare($mem.name, $mem);
	    #
	    ","
	  }* "," EnumBodyDecs? "}" -> EnumBody

    rule Id EnumConstArgs? ClassBody?  -> EnumConst #$ = lexem($0);#
    rule "(" {Expr ","}* ")"  -> EnumConstArgs

    rule ";" ClassBodyDec* -> EnumBodyDecs
