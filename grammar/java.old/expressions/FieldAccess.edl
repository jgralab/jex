module java/expressions/FieldAccess
imports
  java/expressions/Main

exports
  sorts FieldAccess
  context-free syntax
    rule FieldAccess -> Expr

  context-free syntax

    rule                 Expr "." Id -> FieldAccess
    rule             ExprName "." Id -> FieldAccess {reject}
    rule              "super" "." Id -> FieldAccess
    rule TypeName "." "super" "." Id -> FieldAccess
