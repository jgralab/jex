module java/types/TypeVariables
imports
  java/lexical/Identifiers
  java/types/ReferenceTypes

exports
  sorts
    TypeParams
    TypeParam
    TypeBound
    TypeVarId
  
  context-free syntax
    rule TypeVarId TypeBound? -> TypeParam
    
    rule "extends" {ClassOrInterfaceType "&"}+ -> TypeBound
    rule "<" {TypeParam ","}+ ">" -> TypeParams

    rule Id -> TypeVarId
    